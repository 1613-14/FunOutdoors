<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="10dp">

    <TextView
        android:id="@+id/text_consult_title"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:gravity="left|center_vertical"
        android:singleLine="true"
        android:textColor="#a0000000"
        android:textSize="18sp" />

    <ImageView
        android:id="@+id/image_consult"
        android:layout_width="150dp"
        android:layout_height="100dp"
        android:layout_below="@+id/text_consult_title"
        android:scaleType="centerCrop"
        android:src="@mipmap/default_img" />

    <TextView
        android:id="@+id/text_consult_content"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/text_consult_title"
        android:layout_marginLeft="7dp"
        android:layout_toRightOf="@+id/image_consult"
        android:textSize="14sp" />

</RelativeLayout>