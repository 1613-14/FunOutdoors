<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.phone.funoutdoors.activity.MinePageQRActivity">

    <include
        android:id="@+id/include"
        layout="@layout/toolbar_item" />

    <TextView
        android:layout_width="250dp"
        android:layout_height="280dp"
        android:layout_alignTop="@+id/mine_icon"
        android:layout_centerInParent="true"
        android:layout_marginTop="25dp"
        android:background="@color/colorAccent" />

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/mine_icon"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_below="@+id/include"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="60dp"
        android:background="@drawable/circle_head_pic_white_bind"
        android:src="@mipmap/ic_launcher" />

    <TextView
        android:id="@+id/mine_nick"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/mine_icon"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:text="昵称" />

    <ImageView
        android:id="@+id/mine_qr"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:src="@mipmap/ic_launcher" />
</RelativeLayout>
