<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="200dp">

        <ImageView
            android:id="@+id/qubo_scene_img"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop" />

        <ImageView
            android:id="@+id/qubo_scene_mediaimg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true" />

        <TextView
            android:id="@+id/qubo_scene_mediatitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_marginBottom="20dp"
            android:layout_marginRight="20dp"
            android:textColor="@color/white"
            android:textSize="18sp" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp">

        <TextView
            android:id="@+id/qubo_scene_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@android:color/holo_blue_light" />

        <TextView
            android:id="@+id/qubo_scene_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/qubo_scene_type"
            android:textColor="#c0000000" />
    </RelativeLayout>

    <TextView
        android:id="@+id/qubo_scene_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:drawableBottom="@drawable/line"
        android:drawablePadding="10dp"
        android:padding="10dp" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp">

        <TextView
            android:id="@+id/qubo_scene_praise_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="30dp"
            android:drawableTop="@mipmap/love"
            android:gravity="center" />

        <TextView
            android:id="@+id/qubo_scene_discuss_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="30dp"
            android:layout_toRightOf="@id/qubo_scene_praise_count"
            android:drawableTop="@mipmap/comment"
            android:gravity="center" />

        <TextView
            android:id="@+id/qubo_scene_view_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/qubo_scene_discuss_count"
            android:drawableTop="@mipmap/view_small_grey" />

        <TextView
            android:id="@+id/qubo_scene_share"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:drawableTop="@mipmap/travel_share"
            android:text="分享" />

        <TextView
            android:id="@+id/qubo_scene_info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/qubo_scene_share"
            android:layout_marginRight="30dp"
            android:layout_toLeftOf="@+id/qubo_scene_share"
            android:layout_toStartOf="@+id/qubo_scene_share"
            android:drawableTop="@mipmap/mulu"
            android:text="景点详情" />

    </RelativeLayout>
</LinearLayout>