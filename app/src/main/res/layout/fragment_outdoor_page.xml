<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"

    tools:context="com.phone.funoutdoors.fragment.OutdoorPageFragment">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <android.support.design.widget.TabLayout
            android:id="@+id/outdoor_tabLayout"
            android:layout_width="200dp"
            app:tabIndicatorColor="#15A0F5"
            app:tabSelectedTextColor="#15A0F5"
            android:layout_centerHorizontal="true"
            android:layout_height="wrap_content">
        </android.support.design.widget.TabLayout>
        <TextView
            android:id="@+id/countryWide"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="15dp"
            android:textSize="14sp"
            android:text="全国"/>
    </RelativeLayout>


    <android.support.v4.view.ViewPager
        android:id="@+id/outdoor_viewPager"
        android:layout_width="match_parent"
        android:layout_height="match_parent">


    </android.support.v4.view.ViewPager>
</LinearLayout>
